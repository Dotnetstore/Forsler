<Window x:Class="ColourMemory.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ColourMemory.Models"
        mc:Ignorable="d"
        Title="MainView" Height="450" Width="800">
    <DockPanel LastChildFill="True" Background="#FF0B1220">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="16" HorizontalAlignment="Center" >
            <TextBlock Text="Poäng: " Foreground="White" FontSize="18" Margin="0,0,6,0"/>
            <TextBlock Text="{Binding Score}" Foreground="White" FontSize="18" FontWeight="Bold" Margin="0,0,16,0"/>
            <Button Content="Nytt spel" Command="{Binding StartGameCommand}" Padding="12,6" />
        </StackPanel>

        <ItemsControl ItemsSource="{Binding Cards}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="4" Columns="4" Margin="16"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type local:CardViewModel}">
                    <Button Command="{Binding DataContext.CardClickCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                            CommandParameter="{Binding}"
                            Margin="6" Padding="0" BorderThickness="0" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="IsEnabled" Value="True"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Grid>
                                                <Border x:Name="Back"
                                                        CornerRadius="10"
                                                        Background="#FF1F2937"
                                                        BorderBrush="#FF374151"
                                                        BorderThickness="2"/>
                                                <Border x:Name="Front"
                                                        CornerRadius="10"
                                                        Background="{Binding Color}"
                                                        BorderBrush="#FFFFFFFF"
                                                        BorderThickness="2"
                                                        Opacity="0"/>
                
                                                <Border x:Name="Busy"
                                                        Background="#80000000"
                                                        Visibility="Collapsed"/>
                                            </Grid>
                                            <ControlTemplate.Triggers>
                                                <DataTrigger Binding="{Binding IsRevealed}" Value="True">
                                                    <Setter TargetName="Front" Property="Opacity" Value="1"/>
                                                    <Setter TargetName="Back" Property="Opacity" Value="0"/>
                                                </DataTrigger>
                
                                                <DataTrigger Binding="{Binding IsRevealed}" Value="True">
                                                    <Setter Property="IsEnabled" Value="False"/>
                                                </DataTrigger>
                
                                                <DataTrigger Binding="{Binding IsRemoved}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                
                                                <DataTrigger Binding="{Binding DataContext.IsBusy, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                                    <Setter TargetName="Busy" Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </DockPanel>
</Window>
